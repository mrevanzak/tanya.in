{
  "name": "@tanya.in/ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    "./config": "./tailwind.config.ts",
    ".": "./src/index.ts",
    "./*": "./src/*.tsx"
  },
  "license": "MIT",
  "scripts": {
    "add": "bun x shadcn-ui add",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "shadcn:add": "bun x shadcn-ui add && prettier src --write --list-different",
    "nextui:add": "bun x nextui-cli add && prettier src --write --list-different"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@nextui-org/avatar": "^2.0.27",
    "@nextui-org/button": "^2.0.31",
    "@nextui-org/dropdown": "^2.1.23",
    "@nextui-org/input": "^2.1.21",
    "@nextui-org/spinner": "^2.0.28",
    "@nextui-org/system": "^2.1.2",
    "@nextui-org/theme": "^2.2.3",
    "@radix-ui/react-icons": "^1.3.0",
    "ai": "^3.1.12",
    "class-variance-authority": "^0.7.0",
    "framer-motion": "^11.1.7",
    "next-themes": "^0.3.0",
    "react-hook-form": "^7.51.1",
    "sonner": "^1.4.41",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@tanya.in/eslint-config": "*",
    "@tanya.in/prettier-config": "*",
    "@tanya.in/tsconfig": "*",
    "@types/react": "^18.3.1",
    "eslint": "^9.2.0",
    "prettier": "^3.2.5",
    "react": "18.3.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "zod": "^3.23.0"
  },
  "peerDependencies": {
    "react": "18.3.1",
    "zod": "^3.23.0"
  },
  "prettier": "@tanya.in/prettier-config"
}
